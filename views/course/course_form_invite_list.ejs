<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th class="span1"><input type="checkbox"></th>
      <th class="span2">Name</th>
      <th class="span2">Email</th>
      <th class="span9">Time</th>
      <th class="span2"></th>
    </tr>
  </thead>
  <tbody>	
    <h> afaf</h>
	
	<% if(locals.invitations.length>0){ %>
	  <% for(var i=0; i<locals.invitations.length; i++) {%>
	    <tr>
		    <td><input type="checkbox"> <a href="#"><i class="icon-star-empty"></i></a></td>
						
            <td><span class="label pull-right"><%= locals.invitations[i].email %></span></td>
			
			<% if(locals.invitations[i].reply) {%>
				<td><span class="label label-success"><%= locals.invitations[i].reply %></span></td>           
			<% } %>
			
			<% if(locals.invitations[i].status) {%>
				<td><span class="label ">  <%= locals.invitations[i].status%> </span></td>           
			<% } %>	

			<td><strong> <%= locals.invitations[i].time %>  </strong></td>
			
            <td>
               <a href="#editModal" class='edit-modal' data-toggle="modal" data-id="<%= locals.invitations[i]._id %>"><i class="icon-pencil"></i></a>
               <a href="#deleteModal" class='delete-modal' role="button" data-toggle="modal" data-id="<%= locals.invitations[i]._id %>"><i class="icon-remove"></i></a>
            </td>				
		</tr>	
      <% } %>
	<% } %>
    <!---->	
  </tbody>
</table>


