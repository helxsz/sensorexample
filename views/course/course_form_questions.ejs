<div class="row-fluid">

    <div class="board"> 
	    <div class="board-description">
            <h2 class="board-title">Question Detail</h2> 
            <p>Start by giving it question details </p> 
        </div>        
    </div>
	 
    <div class="form_container row">
      <div class="span8" style="border-right: 1px dotted #d0d5cb;">
	
        <form method="post" action="/course/<%= locals.course._id %>/questions" id="question_form" class="form-horizontal " enctype="multipart/form-data" >
            <input type="hidden" name="_csrf" value="<%= token %>"/>
			<input type="hidden" id="course_id" name="course_id" value="<%= locals.course._id %>" />

            <fieldset>
                <div id="description-cg" class="control-group ">
                    <label for="description-tf" class="control-label"><strong>Description</strong></label>
                    <div class="controls control span9">
						<textarea id="description-tf" type="text" name="description" value="" class="mdm-input" style="margin-bottom: 5px; height: 148px; width: 400px;"> </textarea>
                        <span ><span class="character_counter">130</span>/130</span>
					</div>	
                    <span class="tip" >Describe your questions in either text or code</span>																			
      		    </div>

                <div id="tip-cg" class="control-group ">
                    <label for="tip-tf" class="control-label"><strong>Tip</strong><small>(optional)</small></label>
                    <div class="controls control span9">
						<textarea id="tip-tf" type="text" name="tip" value="" class="mdm-input" style="margin-bottom: 5px; height: 148px; width: 400px;"> </textarea>
                        <span ><span class="character_counter">130</span>/130</span>
					</div>
                    <span class="tip" >Give your tip in either text or code</span>																								
      		    </div>

                <div id="solution-cg" class="control-group ">
                    <label for="solution-tf" class="control-label"><strong>Solution</strong></label>
                    <div class="controls control span9">
						<textarea id="solution-tf" type="text" name="solution" value="" class="mdm-input" style="margin-bottom: 5px; height: 148px; width: 400px;"> </textarea>
                        <span ><span class="character_counter">130</span>/130</span>
					</div>					
      		    </div>
								
                <div id="level-cg" class="control-group ">
                    <label for="level-tf" class="control-label"><strong>Level</strong></label>
                    <div class="controls control span9">				
                        <select class="required select"  name="level">
                                <option name="level" value="0">Easy</option>
							    <option name="level" value="1">InterMediate</option>
								<option name="level" value="2">Tricky</option>
                                <option name="level" value="3">Hard</option>								
						</select>				
					</div>						
      		    </div>								
				
                <div id="tags-cg" class="control-group ">
                    <label for="tags-tf" class="control-label"><strong>Tags</strong><small>(optional)</small></label>
                    <div class="controls control span9">         
						<input name="tags" id="tags" value="" />
                    </div>
                </div>
								
                 <div class="form-actions">
                      <input type="submit" id="form_btn" value="Send Message"></input>					  
                </div>
             </fieldset>
         </form>
		</div>
		
		
		<div class="span4"   >

		     <div class='search'>
                <input type="text" />
                    <button><i class='icon-search'></i></button>
            </div>
			
			<% include question_list %>
		</div>
	</div>	
</div>


