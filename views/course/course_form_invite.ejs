box-shadow: none;
border: 0;
margin-bottom: 20px;
width: 383px;
background: white;
border: none;
border-radius: 3px;
-moz-border-radius: 3px;
-webkit-border-radius: 3px;
}

.form-horizontal .control-group {
margin-bottom: 25px;
}

.form-horizontal .control-label {
float: left;
width: 40px;
padding-top: 5px;
text-align: left;
}

.form-horizontal .controls {
margin-left: 50px;
font-size: 15px;
}

.control-group{
margin-left: 0px;
}
.control{

-moz-border-radius: 6px;
-webkit-border-radius: 6px;
-o-border-radius: 6px;
-ms-border-radius: 6px;
-khtml-border-radius: 6px;
border-radius: 6px;
overflow: hidden;
height: auto;
margin-bottom: 12px;
padding:10px 10px 10px 10px;

background: rgb(205, 216, 194);
}


.tagsinput {
border: 1px solid #CCC;
background: #FFF;
padding: 5px;
width: 480px;
height: 100px;
overflow-y: auto;
}


.filedrag {
font-weight: bold;
text-align: center;
padding: 1em 0;
margin: 20px 0;
margin-left:10px;
margin-right:10px;
color: #555;
border: 2px dashed #555;
border-radius: 7px;
cursor: default;
width:60px;
display:inline;
}
.filedrag input{
opacity:0;
width:80px;
}

.filedrag.hover
{
	color: #f00;
	border-color: #f00;
	border-style: solid;
	box-shadow: inset 0 3px 4px #888;
}





.search{
  width:400px;
  margin:0px auto;
  margin-top:40px;
}
.search input[type="text"]{
  border:1px solid #e5e5e5;
  font-size:20px;
  width:400px;
  display:block;
  padding:10px 5px;
  font-family: 'Open Sans Light', sans;
  color:#333;
  outline:0;
  box-shadow:0px 1px 0px #fff;
}
.search input[type="text"]:focus{
  border:1px solid #539fb5;
}

.search input[type="text"]:focus ~ button{
  color:#777;
}






.tip {
position: absolute;
width: 155px;
padding: 11px 10px 11px 20px;
font-family: "MuseoSans_light";
line-height: 150%;
color: #fff;
background-color: #409f89;
-webkit-border-radius: 2px;
-moz-border-radius: 2px;
border-radius: 2px;
margin-left: 20px;
margin-top: 5px;
}

.tip:after {
content: " ";
position: absolute;
right: 100%;
height: 0;
width: 0;
top: 16px;
border: solid transparent;
pointer-events: none;
border-color: transparent;
border-right-color: #409f89;
border-width: 8px 12px;
}

.control-group .tip {
visibility:hidden;   
}

.control-group:hover .tip {
visibility:visible;
}

.form-actions input[type="submit"] {
display: block;
height: 33px;
line-height: 34px;
padding: 0 15px;
background-color: #55bc75;
color: #fff;
cursor: pointer;
border: none;
-webkit-border-radius: 2px;
-moz-border-radius: 2px;
border-radius: 2px;
-webkit-transition: opacity 0.2s linear;
-moz-transition: opacity 0.2s linear;
transition: opacity 0.2s linear;
-webkit-border-radius: 40px;
border-radius: 40px;
}
.form-actions input[type="submit"]:hover{
background-color: #409f89;
}
</style>

